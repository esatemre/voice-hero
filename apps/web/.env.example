# Environment Variables Configuration
# 
# Development: Copy this file to .env.local and fill in the values
# Production: Set these variables in your hosting environment (Vercel, etc.)
# 
# Next.js automatically loads environment variables:
# - Development: Reads from .env.local at runtime
# - Production: Reads from server environment variables at runtime

# Firebase (configured in lib/firebase.ts)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ElevenLabs
ELEVENLABS_API_KEY=

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000


# Firebase Admin (Server-side only)
# Required for API routes to access Firestore
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=